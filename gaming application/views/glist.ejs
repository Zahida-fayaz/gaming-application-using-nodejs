<% include ("partials/header") %>
 
    <h1>This is all of the games we have:</h1>
 
    <div class="row">
        <% for(var i = 0;i < gamesList.length; i++){ %>
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="/thumbnails/<%= gamesList[i].thumbnailFile %>" style="height: 180px">
                <div class="card-body">
                <h5 class="card-title"><%= gamesList[i].title %></h5>
                <p class="card-text">Game created by <%= gamesList[i].creator %></p>
                <a href="/playgames/<%= gamesList[i].id %>/" class="btn btn-primary">Play Game</a>
                <a href="playgames/edit/<%= gamesList[i].id %>/" class="btn btn-primary">Edit</a>
                <a href="/playgames/delete/<%= gamesList[i].id %>/" type="button" class="btn btn-danger">Delete </a>
                </div>
            </div>
        </div>
        <% } %>
    </div>
    
<% ("include partials/footer") %>